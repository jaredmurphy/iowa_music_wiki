<div id="list_content"  class="eight columns">

	<% if session['author_id'] %>
		<div id="form" >
			<h4>Create an Entry</h4>
			<p>In order to create submit an entry please choose one of the following categories</p>	
			<% @categories.each do |category| %>
				<a href="/create_entry/<%= category %>"><input class="button-primary" type="submit" value="<%= category.capitalize %>"></a>
			<% end %>
		</div>
	<% else %>
		<h1>Please <a href='/login'>Login</a> or <a href='/signup'> Sign up</a></h1>
	<% end %>	
</div>